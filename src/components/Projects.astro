---
import AstroIcon from "../Icons/AstroIcon.astro";
import TailwindIcon from "../Icons/TailwindIcon.astro";
import ReactIcon from "../Icons/ReactIcon.astro";
import GitHub from "../Icons/GitHub.astro";
import Link from "../Icons/Link.astro";
import LinkButton from "./LinkButton.astro";

const TAGS = {
  ASTRO: {
    name: "Astro",
    icon: AstroIcon,
  },
  TAILWIND: {
    name: "Tailwind",
    icon: TailwindIcon,
  },
  REACT: {
    name: "React",
    icon: ReactIcon,
  },
};

const PROJECTS = [
  {
    title: "E-commerce",
    description: "E-commerce whit React, Tailwind. All functionalities.",
    link: "https://ecommerce-drab-rho.vercel.app/",
    github: "#",
    image: "ecommerce.webp",
    tags: [TAGS.REACT, TAGS.TAILWIND],
  },
  {
    title: "Tesla Clone",
    description: "Tesla Clone whit Astro, Tailwind. Clone exactly the design.",
    link: "https://tesla-landing-xi.vercel.app/",
    github: "#",
    image: "tesla.webp",
    tags: [TAGS.ASTRO, TAGS.TAILWIND],
  },
  {
    title: "Todo App",
    description: "Todo App with ReactJs. Create and delete tasks.",
    link: "https://rmoreno3.github.io/Todo_machine/",
    github: "#",
    image: "todoApp.webp",
    tags: [TAGS.REACT, TAGS.TAILWIND],
  },
];
---

{
  PROJECTS.map(({ title, description, link, github, tags, image }) => (
    <article class="flex flex-col space-x-0 mt-5 space-y-8 group md:flex-row md:space-x-8 md:space-y-0">
      <div class="w-full md:w-1/2">
        <div class="relative flex flex-col items-center col-span-6 row-span-5 gap-8 transition duration-500 ease-in-out transform shadow-xl overflow-clip rounded-xl sm:rounded-xl md:group-hover:-translate-y-1 md:group-hover:shadow-2xl lg:border lg:border-gray-800 lg:hover:border-gray-700 lg:hover:bg-gray-800/50">
          <img
            alt={title}
            class="object-cover object-top w-full h-56 transition duration-500 sm:h-full md:scale-110 md:group-hover:scale-105"
            src={image}
          />
        </div>
      </div>

      <div class="w-full md:w-1/2 md:max-w-lg">
        <h3 class="text-2xl font-bold text-gray-800 dark:text-gray-100">
          {title}
        </h3>
        <div class="flex flex-wrap mt-2">
          <ul class="flex flex-row mb-2 gap-x-2">
            {tags.map((tag) => (
              <li>
                <span class="flex items-center gap-x-2 rounded-full bg-white/5 px-2 py-1 shadow-2xl shadow-white/20">
                  <tag.icon class="size-4" />
                  {tag.name}
                </span>
              </li>
            ))}
          </ul>

          <div class="mt-2 text-gray-700 dark:text-gray-400">{description}</div>
          <footer class="flex items-end justify-start mt-4 gap-x-4">
            {github && (
              <LinkButton href={github}>
                <GitHub class="size-6" />
                Code
              </LinkButton>
            )}
            {link && (
              <LinkButton href={link}>
                <Link class="size-4" />
                Preview
              </LinkButton>
            )}
          </footer>
        </div>
      </div>
    </article>
  ))
}
