---
import Badge from "../components/Badge.astro";
import SocialPill from "../components/SocialPill.astro";
import Linkedin from "../Icons/Linkedin.astro";
import GitHub from "../Icons/GitHub.astro";
import Mail from "../Icons/Mail.astro";
---

<div class="py-44 pb-24">
  <div class="flex gap-4 mb-4 items-center">
    <img
      src="/foto_reynaldo.jpg"
      alt=" Foto Reynaldo"
      class="rounded-full size-12 mb-4"
    />
    <a
      class="flex justify-center items-center hover:scale-105"
      href="https://www.linkedin.com/in/reynaldo-moreno-2abab11b6/"
      target="_blank"
      rel="noopenner"><Badge>disponible for work</Badge></a
    >
  </div>
  <h1
    class="text-black dark:text-white text-2xl md:text-4xl lg:text-4xl font-bold flex flex-row gap-x-4 pb-6 lg:pb-10"
  >
    Hey, I'm Reynaldo Moreno
  </h1>
  <h2 class="text-xl lg:text-2xl
      opacity-80 text-wrap max-w-[700px]">
    +3 Years of experience. <span
      class="text-yellow-500 dark:text-yellow-200/90"
      >Web Developer & Content Creator</span
    >. From Venezuela. Specialized in creating unique applications
  </h2>

  <nav class="flex gap-4 mt-3 flex-wrap">
    <SocialPill href="https://www.linkedin.com/in/reynaldo-moreno-2abab11b6/">
      <Linkedin class="size-4 lg:size-6" />
      Linkedin
    </SocialPill>
    <SocialPill href="https://github.com/Rmoreno3">
      <GitHub class="size-4 lg:size-6" />
      Github
    </SocialPill>
    <SocialPill href="mailto:reynaldomoreno173@gmail.com">
      <Mail class="size-4 lg:size-6" />
      reynaldomoreno173@gmail.com
    </SocialPill>
  </nav>
</div>
